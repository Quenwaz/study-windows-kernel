{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(Windows) Launch",
            "type": "cppvsdbg",
            "request": "launch",
            // Resolved by CMake Tools:
            "program": "${command:cmake.launchTargetPath}",
            "args": [
                "192.168.60.88",
                "8080"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [
                {
                    // add the directory where our target was built to the PATHs
                    // it gets resolved by CMake Tools:
                    "name": "PATH",
                    "value": "${env:PATH};${command:cmake.getLaunchTargetDirectory};${workspaceFolder}/install/bin"
                }
            ],
            "console": "externalTerminal",
            "preLaunchTask": "build cmake project"
        }
    ]
}
